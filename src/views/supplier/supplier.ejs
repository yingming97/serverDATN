<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Chi tiết nhà cung cấp</title>

    <!-- Custom fonts for this template-->
    <link rel="icon" href="img/store.png">
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://unpkg.com/bootstrap-table@1.21.3/dist/bootstrap-table.min.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../component/sidebar') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%- include('../component/toolbar.ejs') %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-3">
                    <h1 class="h3 mb-0 text-gray-800">Nhà cung cấp</h1>
                    <div>
                        <a onclick="openSupplierModalAddAndUpdate()"
                           class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                    class="fas fa-plus fa-sm text-white-50"></i> Thêm mới</a>
                        <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                    class="fas fa-download fa-sm text-white-50"></i> Export</a>
                    </div>
                </div>

                <%# console.log(data) %>

                <input type="text" class="form-control mb-1" id="myInput"
                       placeholder="Search for...">
                <!-- Content Row -->
                <table class="table table-bordered" id="dtBasicExample"
                       data-toggle="table"
                       data-flat="true">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col" data-sortable="true">STT</th>
                        <th scope="col" data-sortable="true">Tên nhà cung cấp</th>
                        <th scope="col" data-sortable="true">SDT</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody id="myTable">

                    <!--START ITEM-->
                    <% for (var i = 0;i < data.length;i++){ %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td><%= data[i].supplierName %></td>
                            <td><%= data[i].phoneNumber %></td>
                            <td class="d-flex justify-content-center">
                                <a onclick="openDetailSupplierModal('<%= data[i]._id %>')" class="btn btn-info">
                                    Chi tiết
                                </a>
                            </td>
                        </tr>
                    <% } %>

                    <!--END ITEM-->

                    </tbody>
                </table>

            </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../component/footer') %>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('../component/modalLogout') %>
<!-- supplier Modal-->
<%- include('../component/modalConfirmDelete') %>
<%- include('../supplier/modalAddSupplier') %>
<%- include('../supplier/modalDetailSupplier') %>

<!-- Import JavaScript-->
<%- include('../component/importScripts.ejs') %>
<script src="../js/supplier.js"></script>


</body>

</html>