<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Chi tiết công việc</title>

    <!-- Custom fonts for this template-->
    <link rel="icon" href="../img/store.png">
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://unpkg.com/bootstrap-table@1.21.3/dist/bootstrap-table.min.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="../css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../component/sidebar') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%- include('../component/toolbar.ejs') %>

            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-3">
                    <h1 class="h3 mb-0 text-gray-800">Chi tiết công việc</h1>
                    <div>
                        <a class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm"
                           onclick="updateTask('<%= data._id %>')">
                            <i class="fas fa-pen fa-sm text-white-50"></i>
                            Sửa
                        </a>
                        <a class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm"
                           onclick="deleteTask('<%= data._id %>')">
                            <i class="fas fa-trash fa-sm text-white-50"></i>
                            Xóa
                        </a>
                    </div>
                </div>

                <% console.log(data) %>
                <!--search table-->
                <div>
                    <div class="text-center">
                        <h2 class=""><strong id="titleTask" style="color: #4e73df">
                                <%= data.task_tittle %>
                            </strong>
                        </h2>
                    </div>

                    <span><strong id="idTask"></strong></span>
                    <div class="d-flex justify-content-between m-1">
                        <div>
                            <i class="fa fa-user-edit"></i>
                            <strong>Người giao: </strong><span>
                                <%= data.assigned_by.name %>
                            </span><br>
                            <i class="fa fa-user-alt"></i>
                            <strong>Người nhận: </strong><span>
                                <%= data.assigned_to.name %>
                            </span>
                        </div>
                        <div>
                            <i class="fa fa-calendar-check"></i>
                            <strong>Deadline: </strong>
                            <% if (!data.deadline){ %>
                                <span>Không có deadline</span>
                            <% }else { %>
                                <span><%= data.deadline %></span>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <div>
                        <h5><strong>Comment:</strong></h5>
                        <div>
                            <i class="fa fa-comment"></i>
                            <span>- <%= data.task_comment %></span>
                            <hr>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('../component/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->
    </div>
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include('../component/modalLogout') %>
<!--confirm delete product-->
<%- include('../component/modalConfirmDelete.ejs') %>
<%- include('../task/modalAddAndUpdateTask') %>

<!-- Import JavaScript-->
<%- include('../component/importScripts.ejs') %>
<script src="../js/task.js"></script>

</body>

</html>