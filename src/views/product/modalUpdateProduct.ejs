<div id="modalUpdateProduct" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog"
     aria-labelledby="modalUpdateProduct"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <!---->
        <div class="modal-content p-4">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModal"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!--LOADING-->
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="modal-body fixed-height overflow-y: initial">
                <div class="d-flex justify-content-end" id="barcodeUpdate"></div>
                <div id="barCode"></div>
                <div class="form-group">
                    <label for="nameProduct">Tên sản phẩm: </label>
                    <input type="text" class="form-control" id="nameProduct"
                           placeholder="Ten san pham">
                </div>
                <!--Bar code-->
                <div class="form-group">
                    <label for="addBarCode">Bar code:</label>
                    <input type="text" class="form-control" id="addBarCode"
                           placeholder="Bar code">
                </div>
                <!--NHA CUNG CAP-->
                <div class="form-group">
                    <label for="sel1">Nhà cung cấp:</label>
                    <select class="form-control" id="supplierOption">
                    </select>
                </div>
                <!--NGANH HANG-->
                <div class="form-group">
                    <label for="sel1">Nganh hang:</label>
                    <select class="form-control" id="industryOption">
                    </select>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-danger"
                        style="width: 5rem" data-dismiss="modal">Hủy
                </button>

                <div id="btnUpdate" class="btn btn-success">
                    <div id="loadingUpdatePro" class="spinner-border spinner-border-sm" style="display: none"
                         role="status">
                    </div>
                    Lưu
                </div>
                <!---->
                <div id="btnAdd" class="btn btn-success">
                    <div id="loadingAddPro" class="spinner-border spinner-border-sm" style="display: none"
                         role="status">
                    </div>
                    Thêm
                </div>
            </div>

        </div>
        <hr>
    </div>


</div>
